    {

        gems = new List<Gem>() {
            new Gem()
            {
                Name = "Diamond",
                Price = 10,
                Description = "The most precious gem on this site. The market cap is fixed at 10 thousand.",
                Id = 1
            },
            new Gem()
            {
                Name = "Ruby",
                Price = 1,
                Description = "The second most precious gem on this site. The market cap is fixed at 100 thousand.",
                Id = 2
            },
            new Gem()
            {
                Name = "Emerald",
                Price = 0.20,
                Description = "The third most precious gem on this site. The market cap is fixed at 500 thousand.",
                Id = 3
            },

            new Gem()
            {
                Name = "Sapphire",
                Price = 0.10,
                Description = "The fourth most precious gem on this site. The market cap is fixed at one million.",
                Id = 4
            },



        };
    }


}
 


