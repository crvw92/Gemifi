@page "/"

<h1>Hello, fellow Lumenaut!</h1>

<p>this is the intro page for vGems </p>


<div>
    <h3>Gems</h3>

    @foreach (var gem in gems)
    {
        <p> Name: <b>@gem.Name</b></p>
        <p> Price: <b>@gem.Price</b></p>
        <p> Description: <b>@gem.Description</b></p>

    }

</div>


